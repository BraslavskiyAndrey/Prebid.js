{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prebid Auctions",
  "description": "A batched data object describing the lifecycle of an auction or multiple auction across a single page view.",
  "type": "object",
  "required": [
    "eventTimeMillis",
    "integration",
    "version"
  ],
  "anyOf": [
    {
      "required": [
        "auctions"
      ]
    },
    {
      "required": [
        "bidsWon"
      ]
    }
  ],
  "properties": {
    "eventTimeMillis": {
      "type": "integer",
      "description": "Unix timestamp of time of creation for this batched event in milliseconds."
    },
    "integration": {
      "type": "string",
      "description": "Integration type that generated this event.",
      "default": "pbjs"
    },
    "version": {
      "type": "string",
      "description": "Version of Prebid.js responsible for the auctions contained within."
    },
    "auctions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "adUnits"
        ],
        "properties": {
          "clientTimeoutMillis": {
            "type": "integer",
            "description": "Timeout given in client for given auction in milliseconds (if applicable)."
          },
          "serverTimeoutMillis": {
            "type": "integer",
            "description": "Timeout configured for server adapter request in milliseconds (if applicable)."
          },
          "serverAccountId": {
            "type": "number",
            "description": "The account id for prebid server (if applicable)."
          },
          "adUnits": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "description": "An array of adUnits involved in this auction.",
              "required": [
                "adUnitCode",
                "mediaTypes",
                "dimensions",
                "bids"
              ],
              "properties": {
                "adUnitCode": {
                  "type": "string",
                  "description": "The adUnit.code identifier"
                },
                "adSlot": {
                  "type": "string"
                },
                "mediaTypes": {
                  "type": "array",
                  "uniqueItems": true,
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "enum": [
                      "native",
                      "video",
                      "banner"
                    ]
                  }
                },
                "dimensions": {
                  "type": "array",
                  "description": "All valid sizes included in this auction (note: may be sizeConfig filtered).",
                  "minItems": 1,
                  "items": {
                    "$ref": "#/definitions/dimensions"
                  }
                },
                "adserverTargeting": {
                  "type": "object",
                  "description": "The result of setting targeting for this adUnit based off bidResponses"
                },
                "bids": {
                  "type": "array",
                  "description": "An array that contains a combination of the bids from the adUnit combined with their responses.",
                  "minItems": 1,
                  "items": {
                    "$ref": "#/definitions/bid"
                  }
                }
              }
            }
          }
        }
      }
    },
    "bidsWon": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/bid"
      }
    }
  },
  "definitions": {
    "dimensions": {
      "type": "object",
      "description": "Size object representing the dimensions of creative in pixels.",
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "bid": {
      "type": "object",
      "required": [
        "bidder",
        "transactionId",
        "bidId",
        "status",
        "source",
        "params"
      ],
      "properties": {
        "bidder": {
          "type": "string"
        },
        "bidId": {
          "type": "string",
          "description": "UUID representing this individual bid request in this auction."
        },
        "transactionId": {
          "type": "string",
          "description": "The UUID generated id to represent this adunit in this auction."
        },
        "params": {
          "description": "A copy of the bid.params from the adUnit.bids",
          "anyOf": [
            {
              "type": "object"
            },
            {
              "$ref": "#/definitions/params/rubicon"
            }
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "success",
            "noBid",
            "error"
          ]
        },
        "error": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "enum": [
                "request-error",
                "connect-error",
                "timeout-error"
              ]
            },
            "description": {
              "type": "string"
            }
          }
        },
        "samplingFactor": {
          "type": "integer",
          "description": "An integer value representing the factor to multiply event count by to receive unsampled count.",
          "enum": [1, 10, 20, 40, 100]
        },
        "source": {
          "type": "string",
          "enum": [
            "client",
            "server"
          ]
        },
        "clientLatencyMillis": {
          "type": "integer",
          "description": "Latency from auction start to bid response recieved in milliseconds."
        },
        "serverLatencyMillis": {
          "type": "integer",
          "description": "Latency returned by prebid server (response_time_ms)."
        },
        "bidResponse": {
          "type": "object",
          "required": [
            "dimensions",
            "bidPriceUSD"
          ],
          "properties": {
            "dimensions": {
              "$ref": "#/definitions/dimensions"
            },
            "bidPriceUSD": {
              "type": "number",
              "description": "The bid value denoted in USD"
            },
            "dealId": {
              "type": "string",
              "description": "The id associated with any potential deals"
            },
            "adserverTargeting": {
              "type": "object",
              "description": "The adserverTaregting set for this bid"
            }
          }
        }
      }
    },
    "params": {
      "rubicon": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "number"
          },
          "siteId": {
            "type": "number"
          },
          "zoneId": {
            "type": "number"
          }
        }
      }
    }
  }
}
